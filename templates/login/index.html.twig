{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style_for_register.css') }}">
{% endblock %}
{% block title %}Hello User!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


        
<div class="container size">
    <div class="row bg-secondary redondeo">
        <div class="col-md-8 offset-md-3">
            <h1>Login</h1>
            <form class="form-signin" action="{{ path('app_login') }}" method="post">
                <div class="form-group">     
                     <label for="username" class="sr-only">Email:</label>
                     <input type="text" id="username" name="_username" class="form-control" placeholder="Email" value="{{ last_username }}" required autofocus>
                </div>
               <div class="form-group">   
                     <label for="password" class="sr-only">Password:</label>
                     <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required>
              </div>
               {# If you want to control the URL the user is redirected to on success
               <input type="hidden" name="_target_path" value="/"> #}

               <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>


        
{% endblock %}
